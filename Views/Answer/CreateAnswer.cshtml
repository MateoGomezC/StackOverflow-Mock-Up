@model StackOverflow.Models.Question

@{
    ViewData["Title"] = "Create";
}

<h1>Answer "@Model.Title"</h1>

<h4>Answer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateAnswer" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="Content" class="control-label"></label>
                <textarea name="content" for="Content" class="form-control" ></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
@*            <div class="form-group">
                <label asp-for="Vote" class="control-label"></label>
                <input asp-for="Vote" class="form-control" />
                <span asp-validation-for="Vote" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <input type="hidden" name="questionId" value="@Model.Id"/>
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
